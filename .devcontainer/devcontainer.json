{
    "name": "Klopta dev container",
    "dockerComposeFile": "docker-compose.yml",
    "service": "dev-container",
    "workspaceFolder": "/workspaces/AppliedAiProject",
    "runServices": ["mongodb", "ollama", "redis"],
    "shutdownAction": "stopCompose",

    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
			"installZsh": "true",
			"configureZshAsDefaultShell": "true",
			"installOhMyZsh": "false",
			"installOhMyZshConfig": "false",
			"username": "vscode",
			"userUid": "automatic",
			"userGid": "automatic",
			"upgradePackages": "false"
		},
        "ghcr.io/devcontainers/features/git:1": {
            "version": "os-provided",
            "ppa": "false"
        },
        "ghcr.io/devcontainers/features/docker-in-docker:2": {},
        "ghcr.io/raucha/devcontainer-features/pytorch:1": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.debugpy",
                "ms-python.vscode-pylance",
                "ms-python.isort",
                "ms-toolsai.jupyter",
                "ms-toolsai.jupyter-keymap",
                "ms-toolsai.vscode-jupyter-cell-tags",
                "ms-toolsai.jupyter-renderers",
                "ms-toolsai.vscode-jupyter-slideshow",
                "ms-toolsai.tensorboard",
                "charliermarsh.ruff"
            ]
        }
    },

    "remoteUser": "vscode",

    "postCreateCommand": "pip install -r backend/requirements.txt; pip install -r backend/checket/requirements.txt; python3 -m spacy download nl_core_news_md"
}
